<div id="<%= dom_id report %>">
  <p>
    <strong>Title:</strong>
    <%= report.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= report.content %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= report.date %>
  </p>


  <p>
    <strong>Report type:</strong>
    <%= report.report_type %>
  </p>

  <p>
    <strong>Office:</strong>
    <%= report.office %>
  </p>

  <p>
    <strong>User:</strong>
    <%= report.user_id %>
  </p>

  <p>
    <strong>Remarks:</strong>
    <%= report.remarks %>
  </p>
  <p>
    <% if report.images.attached? %>
    <% report.images.each do |image| %>
      <div class="m-1">
        <%= image_tag(image, height:100, :style=>'height:150px !important;') %>
      </div>
      <% end %>
    <% end %>
  </p>

</div>
